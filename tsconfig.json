{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
  },
  "include": [
    "./src/**/*.vue",
    "./src/**/*.tsx",
    "./src/**/*.ts",
    "./src/**/*.js",
  ],
  "exclude": [
    "node_modules"
  ]
}
